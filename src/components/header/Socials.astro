---
import Icon from 'astro-icon'

interface networksInterface {
  name: string
  url: string
  icon: string
  color: string
}

const networks: networksInterface[] = [
    {
        name: 'loid',
        url: 'https://linked.in/loid',
        icon: 'akar-icons:linkedin-fill',
        color: 'hover:text-blue-500',
    },
    {
        name: 'loidnoir',
        url: 'https://github.com/loidnoir',
        icon: 'akar-icons:github-fill',
        color: 'hover:text-white',
    },
    {
      name: 'samohin',
      url: 'https://discordapp.com/users/690728155052245072',
      icon: 'akar-icons:discord-fill',
      color: ' hover:text-indigo-500',
    }
]
---

<div
  class='flex md:flex-col justify-evenly gap-4 px-5 md:px-10 py-4 md:py-8 border border-white/60 bg-white/5 rounded-md'
>
  {
    networks.map((network) => {
      return (
        <a
          class={`flex gap-4  text-white/60 ${network.color} text-xs md:text-lg font-quicksand font-normal cursor-pointer`}
          href={network.url}
          target='_blank'
        >
          <Icon width='20px' name={network.icon} />
          <p class='hidden xl:block'>{network.name}</p>
        </a>
      )
    })
  }
</div>
