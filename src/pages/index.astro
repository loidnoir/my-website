---
import AboutMe from '../components/AboutMe.astro'
import Footer from '../components/Footer.astro'
import Networks from '../components/Networks.astro'
import Profile from '../components/Profile.astro'
import Cubeis from '../components/projects/Cubeis.astro'
import Mafia from '../components/projects/Mafia.astro'
import Noir from '../components/projects/Noir.astro'
import Skills from '../components/Skills.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Samvel Petrosyan">
  <div class="flex flex-col gap-4 px-10 py-5 md:px-20 md:py-10">
    <div class="flex flex-col gap-4 md:flex-row md:items-stretch">
      <Profile />
      <Networks />
    </div>
    <div class="flex gap-4 flex-col lg:flex-row md:items-stretch">
      <AboutMe />
      <Skills />
    </div>
    <div class="flex gap-4 flex-col md:flex-row">
      <Mafia />
      <div class="flex flex-col gap-4 basis-2/3">
        <Noir />
        <Cubeis />
      </div>
    </div>
    <Footer />
  </div>
</Layout>
